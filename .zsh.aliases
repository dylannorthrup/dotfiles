function not-watch() {
  export COLOR_SETTING='ALWAYS'
  while true; do
    echo "Running command"
    output=$(eval "$*" 2>&1)
    clear
    uptime | colorize blue '.*'
    echo -e "COMMAND: '$*'"
    echo -e "=="
    echo -e "${output}"
    echo -e "=="
    countdown ${NW_DELAY:-5}
  done
}

alias nw='not-watch'
alias nw20='NW_DELAY=20 not-watch'

function quiet_on_success() {
  set +e
  output="$($*)"
  retval=$?
  set -e
  if [[ $retval -gt 0 ]]; then
    echo "${output}"
    exit $retval
  fi
}

