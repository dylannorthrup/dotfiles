clock() {
  DELAY="$*"
  if [ -z $DELAY ]; then
    DELAY="5"
  fi
  while true; do date | tr '\r\n' ' '; sleep ${DELAY}; echo -ne "\r"; done
}

countdown() {
  NUM=$*
  while [ $NUM -gt 0 ]; do
    echo -ne "\r${NUM} "
    NUM=$(expr $NUM - 1)
    sleep 1
  done
  echo -e "\r0 . . . done!"
}

