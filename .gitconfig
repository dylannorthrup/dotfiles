[user]
	name = Dylan Northrup
	email = dylan.northrup@turner.com

[alias]
  a = !git add . && git status
  au = !git add -u . && git status
  aa = !git add . && git add -u . && git status
  br = branch
  co = checkout
  ci = commit
  cm = commit -m
  d = diff --color-words
  dh = diff --color-words head
  dump = cat-file -p
  hist = log --pretty=format:'%C(yellow)%h %C(cyan)%C(ul)%ad%Creset | %s%C(cyan)%d%Creset [%C(white)%an%Creset]' --graph --date=short
  l = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s - %C(white)%an, %ar%Creset'
  ll = log --stat --abbrev-commit
  lol = log --oneline --graph --decorate
  plush = !sh -c \"git pull && git push\"
  s = status -s
  st = status
  type = cat-file -t
  tyup = !sh -c \"git up && git push\"

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
	autocrlf = input
	safecrlf = true
[format]
	pretty = %C(yellow)%h %C(cyan)%C(ul)%ad%Creset | %s%C(cyan)%d%Creset [%C(white)%an%Creset]
[log]
	date = short
[push]
  default = simple
