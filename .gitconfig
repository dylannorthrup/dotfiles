[alias]
  a = !git add . && git status
  au = !git add -u . && git status
  aa = !git add . && git add -u . && git status
  co = checkout
  ci = commit
  cm = commit -m
  d = diff --color-words
  dh = diff --color-words head
  l = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
  ll = log --stat --abbrev-commit
  lol = log --oneline --graph --decorate
  plush = !sh -c \"git up && git push\"
  s = status -s
  st = status

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
